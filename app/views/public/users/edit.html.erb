<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-12 col-lg-12 mx-auto">
      <div class="form">
        <%= form_with model: @user, url: user_path(@user.id), method: :patch do |f| %>
          <div class="form-group">
            <%= f.label :name, "名前" %>
            <%= f.text_field :name, placeholder: "山田太郎" %>
          </div>
          <div class="form-group">
            <%= f.label :most_favorite, "一番のお気に入りアイテム" %>
            <%= f.text_field :most_favorite, placeholder: "アンティーク" %>
          </div>
          <div class="form-group">
            <%= f.label :user_image, "プロフィール画像" %>
            <%= f.file_field :user_image, accept: "image/*" %>
          </div>
          <div class="form-group">
            <%= f.label :introduction, "自己紹介文" %>
            <%= f.text_area :introduction, placeholder: "〇〇が好き、〇〇を集めています、etc..." %>
          </div>
          <div class="form-group">

            <%= f.submit '編集完了', class:'btn btn-info' %>
          </div>
        <% end %>
        <%= link_to '退会する', confirm_user_path(@user.id), class:'btn btn-danger' %>
      </div>
    </div>
  </div>
</div>