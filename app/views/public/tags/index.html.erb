<div class="container">
  <div class="row text-center">
    <div class="col-sm-12 col-md-12 col-lg-12 mx-auto my-2 pt-2 border border-secondary border-3">
      <%= form_with url: search_tags_path, method: :get do |f| %>
        <div class="form-group d-flex flex-wrap">
          <%= f.collection_check_boxes :tag_ids, @tags, :id, :name, class:'form-control' do |b| %>
              <div class="flex-fill border border-secondary px-1 pt-1">
                <%= b.label { b.check_box + b.text }%>
              </div>
          <% end %>
        </div>
        <div class="form-group text-right">
          <%= f.submit '検索', class:'btn btn-info'%>
        </div>
      <% end %>
    </div>
  </div>
</div>